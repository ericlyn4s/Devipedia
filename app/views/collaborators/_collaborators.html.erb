<div class="row">
  <div class="col-md-8">
    <h4>Collaborators</h4>
    <% wiki.collaborators.each do |collab| %>
      <h4><span class="glyphicon glyphicon-user" aria-hidden="true"> <%= collab.user.name %> <%= link_to "Remove", [wiki, collab], method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure you want to remove this user?'} if current_user.id == wiki.user_id || current_user.admin?%></span></h4>
    <% end %>
    <% if current_user.id == wiki.user_id || current_user.admin? %>
      <%= render partial: 'collaborators/form', locals: { wiki: wiki, collaborator: collaborator } %>
    <% end %>
  </div>
</div> 
