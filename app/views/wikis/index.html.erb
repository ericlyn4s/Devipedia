<h1>All Wikis</h1>

<div class="New Form">
  <%= link_to "New Post", new_wiki_path %>
</div>
<% @wikis.each do |wiki| %>
<div class="media">
   <div class="media-body">
     <% if wiki.private? %>
     <%= link_to wiki.title, wiki, class: "private" %> <small>[private]</small>
     <% else %>

     <%= link_to wiki.title, wiki %>
     <% end %>
      </h3>
      <small>By <%= wiki.user.name %> | <%= time_ago_in_words(wiki.created_at) %> ago</small>
     <h4 class="media-heading"><%= link_to markdown(wiki.title), wiki %></h4>
   </div>
 </div>
<% end %>
